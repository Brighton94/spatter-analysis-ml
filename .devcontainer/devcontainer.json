{
	"name": "LPBF Spatter Analysis ML",
	"build": {
		"dockerfile": "./Dockerfile",
		"context": ".."
	},
	"mounts": [
		"source=${localWorkspaceFolder},target=/workspaces/spatter-analysis-ml,type=bind,consistency=cached",
		"source=/media/brighton/Samsung T7/l-pbf-dataset,target=/mnt/ssd/l-pbf-dataset,type=bind,consistency=cached"
		// "source=/Volumes/Samsung T7/l-pbf-dataset,target=/mnt/ssd/l-pbf-dataset,type=bind,consistency=cached"
	],
	"runArgs": ["--shm-size=8g", "--gpus=all"],
	"workspaceFolder": "/workspaces/spatter-analysis-ml",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"ms-azuretools.vscode-docker",
				"charliermarsh.ruff",
				"streetsidesoftware.code-spell-checker",
				"GitHub.copilot",
				"SonarSource.sonarlint-vscode"
			],
			"settings": {
				"editor.defaultFormatter": "charliermarsh.ruff",
				"editor.formatOnSave": true,
				"editor.codeActionsOnSave": {
					"source.organizeImports": "explicit",
					"source.fixAll": "explicit"
				},
				"terminal.integrated.defaultProfile.linux": "bash",
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "/bin/bash",
						"args": ["-l"]
					}
				},
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"python.linting.enabled": true,
				"python.linting.pylintEnabled": true,
				"python.formatting.provider": "black"
			}
		}
	},
	"postCreateCommand": "mkdir -p data",
	"remoteUser": "vscode"
}
